  "compilerOptions": {
    "strict": true,
    "typeRoots": [
      "typings"
    ],
    "baseUrl": ".",
    "paths": {
      "src": [
        "./src/index.ts"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
  ],
