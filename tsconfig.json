{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "isolatedModules": true,
    "target": "esnext",
    "paths": {
      "@example/*": [
        "./*"
      ],
      "public/*": [
        "./public/*"
      ]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
